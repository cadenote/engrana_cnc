component makoffset;
pin out float noffset=0;
pin in bit engra;
pin in float conducida;
pin in float conductora;
variable float antoffst=0;
variable bool cambio = 0;
function _;
license "GPL";
;;
#include <rtapi_math.h>
FUNCTION(_) {  int n=1;
		if (engra != cambio)
			{
			if engra n=-1;  
 			noffset = antoffst + n * ( conductora - conducida );
			antoffst = noffset;
			cambio = engra;
			}
		else noffset = antoffst;
	    }
 
