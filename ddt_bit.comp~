component ddt_bit "Calcula la derivada de una funcion de entrada";
pin in float in_float;
pin out bit out_bit;
variable float old;
function _;
license "GPL";
description "Devuelve False(0)  si las entradas estan dentro del 10%"; 
;;
float tmp = in_float;
out_bit = 1;
if (abs((tmp - old) / fperiod) < 0.1) out_bit= 0 ;
old = tmp;
